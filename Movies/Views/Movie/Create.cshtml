@model Movie;
@{
    ViewData["Title"] = "List of all the movies";
}

<h2>@ViewBag.Title</h2>
<form asp-action="Create" asp-controller="Movie">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input type="text" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating</label>
        <input type="text" asp-for="Rating" class="form-control" />
    </div>

    <button type="submit">Submit</button>

</form>